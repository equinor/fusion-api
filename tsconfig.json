{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["src/types/*"] },
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "importHelpers": true,
        "module": "esnext",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2017",
        "composite": false,
        "moduleResolution": "node",
        "jsx": "react",
        "typeRoots": [
            "./src/typings/@equinor",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        // "src/typings/@equinor",
        "./node_modules/@types"
    ],
    "typedocOptions": {
        "name": "Fusion API",
        "entryPoint": "./src/index.ts",
        "mode": "file",
        "out": "docs",
        "ignoreCompilerErrors": true,
        "excludeNotExported": true,
        "excludePrivate": true
    }
}