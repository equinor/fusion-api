{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["src/types/*"] },
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "importHelpers": true,
        "module": "ESNext",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2021",
        "composite": false,
        "moduleResolution": "node",
        "jsx": "react",
        "skipLibCheck": true,
        "typeRoots": [
            "./src/typings/@equinor",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        // "src/typings/@equinor",
        "./node_modules/@types"
    ]
}