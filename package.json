{
    "name": "@equinor/fusion",
    "version": "3.4.15-beta.0",
    "description": "Everything a Fusion app needs to communicate with the core",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "update-version-definition": "echo \"export default '$npm_package_version';\" > src/version.ts && git commit -am \"Update version.ts\"",
        "update-version-definition:no-commit": "echo \"export default '$npm_package_version';\" > src/version.ts ",
        "build": "npm run update-version-definition && npm run tsc",
        "tsc": "tsc -p ./tsconfig.json",
        "tsc:version": "tsc --version",
        "build-docs": "npx typedoc --out docs src/index.ts",
        "lint": "npx eslint './src/**/*.{js,ts,tsx}' --quiet"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/equinor/fusion-api.git"
    },
    "keywords": [
        "fusion"
    ],
    "author": "Fusion Core",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/equinor/fusion-api/issues"
    },
    "homepage": "https://github.com/equinor/fusion-api#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/**/*.{js,ts,tsx}": [
            "eslint --quiet --fix"
        ]
    },
    "dependencies": {
        "@microsoft/applicationinsights-web": "^2.4.3",
        "@microsoft/signalr": "^8.0.0",
        "jwt-decode": "^3.1.2"
    },
    "devDependencies": {
        "@equinor/eslint-config-fusion": "^2.1.4",
        "@equinor/eslint-config-fusion-react": "^2.0.1",
        "@microsoft/tsdoc": "^0.13.2",
        "@types/history": "^4.7.3",
        "@types/node": "^14.0.1",
        "@types/react": "^17.0.1",
        "@types/react-router": "^5.0.3",
        "@types/react-router-dom": "^5.1.5",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "eslint": "^8.52.0",
        "eslint-plugin-prettier": "^5.0.0",
        "history": "^4.9.0",
        "husky": "^5.0.9",
        "lint-staged": "^11.1.1",
        "prettier": "^3.0.3",
        "react": "^17.0.1",
        "react-router": "^5.0.1",
        "react-router-dom": "^5.0.1",
        "rxjs": "^6.6.3",
        "tslib": "^2.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "0.17.0-3",
        "typesafe-actions": "^5.1.0",
        "typescript": "^4.1.3"
    },
    "optionalDependencies": {
        "history": "^4.9.0",
        "odata-query": "^6.7.0",
        "react": "17.x",
        "react-router": "^5.0.1",
        "react-router-dom": "^5.0.1",
        "rxjs": ">=6.x",
        "uuid": "^8.3.2"
    },
    "files": [
        "/lib"
    ],
    "publishConfig": {
        "access": "public"
    }
}
